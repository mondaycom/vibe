{
  "version": "0.0.0",
  "private": true,
  "description": "Vibe monorepo",
  "scripts": {
    "build": "lerna run build",
    "build:package": "sh scripts/build-dependencies.sh",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "storybook": "lerna run storybook --parallel --stream",
    "postinstall": "lerna run build --scope={vibe-storybook-components,@vibe/icons}",
    "size": "size-limit"
  },
  "devDependencies": {
    "lerna": "^8.1.2",
    "size-limit": "^11.0.1",
    "@size-limit/preset-big-lib": "^11.0.1",
    "typescript": "^4.7.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "size-limit": [
    {
      "name": "@vibe/core",
      "path": "packages/core/dist/src/index.js",
      "limit": "369 KB"
    },
    {
      "name": "@vibe/icons",
      "path": "packages/icons/dist/react/index.js",
      "limit": "10 KB"
    }
  ]
}
