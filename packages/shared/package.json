{
  "name": "@vibe/shared",
  "version": "3.0.0",
  "description": "Shared utilities for Vibe packages",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mondaycom/vibe.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/mondaycom/vibe/issues"
  },
  "homepage": "https://github.com/mondaycom/vibe#readme",
  "author": "monday.com",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint \"./src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "yarn lint -- --fix"
  },
  "devDependencies": {
    "@vibe/config": "3.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "prettier": "^2.5.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "typescript": "^4.7.3",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "vitest": ">=1.6.0"
  },
  "dependencies": {
    "@storybook/jest": "^0.2.3",
    "@storybook/test": "^8.6.14",
    "@testing-library/react": "^12.1.2",
    "lodash-es": "^4.17.21"
  },
  "sideEffects": false,
  "eslintConfig": {
    "extends": [
      "../../node_modules/@vibe/config/.eslintrc.cjs"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "warn"
    }
  }
}
